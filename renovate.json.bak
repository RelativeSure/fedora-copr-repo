{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^.*\\.spec$"
      ],
      "matchStrings": [
        "# renovate:\\s*packageNameTemplate=(?<datasource>[^\\/]+)\\/(?<depName>[^\\s]+)",
        "Version:\\s*(?<currentValue>[\\d\\.]+)"
      ],
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver"
    }
  ]
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^.*\\.spec$"
      ],
      "matchStrings": [
        "%global\\s+github_org\\s+(?<githubOrg>\\S+)",
        "Name:\\s*(?<depName>\\S+)",
        "Version:\\s*(?<currentValue>[\\d\\.]+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "${{githubOrg}}/${{depName}}",
      "versioningTemplate": "semver"
    }
  ]
}
